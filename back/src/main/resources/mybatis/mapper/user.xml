<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
    <insert id="joinUser" parameterType="userVo">
        <![CDATA[
            insert into user(username,password,userNickName,userEmail,roles) values (#{username}, #{password}, #{userNickName}, #{userEmail}, #{roles});
        ]]>
        <selectKey keyProperty="userNo" resultType="long"
                   order="AFTER">
            select last_insert_id()
        </selectKey>
    </insert>

    <insert id="joinAdminUser" parameterType="userVo">
        <![CDATA[
            insert into user(username,password,userNickName,userEmail,roles) values (#{username}, #{password}, #{userNickName}, #{userEmail}, #{roles});
        ]]>
        <selectKey keyProperty="userNo" resultType="long"
                   order="AFTER">
            select last_insert_id()
        </selectKey>
    </insert>

    <select id="findByIdAndPasswordUser" parameterType="string" resultType="userVo">
        <![CDATA[
            select userNo, username, password, userNickName, userEmail, roles from user where username= #{username};
        ]]>
    </select>

</mapper>